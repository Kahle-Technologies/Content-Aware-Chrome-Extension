{
    "name": "OTES Internal Search",
    "version": "1.2.0",
    "manifest_version": 3,
    "description": "Search site for specified text, and get notified when it is found in the content of a page (displayed on the top of the page)",
    "content_scripts": [
        {
            "js": [
                "init.js"
            ],
            "css": [
                "styles.css"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "64": "images/icon-64.png",
        "128": "images/icon-128.png"
    }
}
